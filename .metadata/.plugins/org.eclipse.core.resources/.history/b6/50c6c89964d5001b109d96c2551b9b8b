package com.project.inventory.service;

import java.util.*;
import javax.print.attribute.standard.MediaSize.Other;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.project.inventory.model.Notification;
import com.project.inventory.repository.NotificationRepository;

import antlr.collections.List;

@Service
public class NotificationService {
	@Autowired
	private NotificationRepository repository;
	
	public Notification saveNotification(Notification notification) {
		return repository.save(notification);
	}
	
	public List<Notification> saveNotifications(List<Notification> notifications){
		return repository.saveAll(notifications);
	}
	
	public List<Notification> getNotifications(){
		return repository.findAll();
	}
	
	public Notification getNotificationById(int id){
		return repository.findById(id).orElse(null);
	}
	
	public Notification getNotificationByScope(int scope){
		return repository.findByScope(scope);
	}
	
	public String deleteNotification(int id) {
		repository.deleteById(id);
		return "Notification of no" +id+ "Removed Successfully";
	}
	
	public Notification updateNotification(Notification notification) {
		Notification existingNotification=repository.findById(notification.getId()).orElse(null);
		existingNotification.setScope(notification.getScope());
		existingNotification.setSubject(notification.getSubject());
		existingNotification.setBody(notification.getBody());
		return repository.save(existingNotification);
	}
	

}
